{
  "name": "photo_calendar_maker",
  "version": "1.0.0",
  "description": "Photo calendar templates generator",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0",
    "npm": "please-use-pnpm"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --base=/ --outDir ./build",
    "deploy": "vite build --outDir ../../server/dist/public/projects/photo_calendar_maker --base=/projects/photo_calendar_maker/",
    "lint": "eslint src --ext .ts --max-warnings 0",
    "format:fix": "prettier --write .",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "node -e \"if(process.env.npm_execpath.indexOf('pnpm') === -1) { console.error('\\n\\x1b[31mâœ– Please use pnpm to install dependencies\\x1b[0m\\n'); process.exit(1); }\"",
    "clear": "rm -rf node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hungrysamurai/photo_calendar_maker.git"
  },
  "keywords": [
    "photo",
    "calendar",
    "generator"
  ],
  "author": "hungrysamurai",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hungrysamurai/photo_calendar_maker/issues"
  },
  "homepage": "https://github.com/hungrysamurai/photo_calendar_maker#readme",
  "targets": {
    "default": {
      "publicUrl": "./"
    }
  },
  "dependencies": {
    "cropperjs": "^1.6.2",
    "opentype.js": "^1.3.4",
    "pdf-lib": "^1.17.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/opentype.js": "^1.3.8",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^16.2.0",
    "only-allow": "^1.2.1",
    "prettier": "^3.5.3",
    "process": "^0.11.10",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.2.0"
  }
}
